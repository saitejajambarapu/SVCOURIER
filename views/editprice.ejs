<% layout("/layouts/boilerplate.ejs") -%>

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Country Details</h1>
    <form action="/updateCountry/<%= country.id %>" method="POST">
        <!-- Country Name -->
        <div class="form-group">
            <label for="title">Country Name</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= country.title %>" required>
        </div>

        <!-- Price per KG -->
        <div class="form-group">
            <label for="price">Price Per KG (â‚¹)</label>
            <input type="number" id="price" name="price" class="form-control" value="<%= country.price %>" required step="0.01" min="0">
        </div>

        <!-- Estimated Delivery Days -->
        <div class="form-group">
            <label for="days">Estimated Delivery Days</label>
            <input type="number" id="days" name="days" class="form-control" value="<%= country.Days %>" required min="1">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Update Country</button>
        <a href="/Prices" class="btn btn-secondary">Cancel</a>
    </form>
</div>
