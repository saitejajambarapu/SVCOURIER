<% layout("/layouts/boilerplate.ejs") -%>
</h1>
<div class="container mt-5">
    <h1 class="text-center mb-4">Add New Country Price</h1>


    <form action="/addNewCountry" method="POST">
        <div class="form-group">
            <label for="title">Country Title:</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>

        <div class="form-group">
            <label for="imageUrl">COUNTRY Name For Image URL:</label>
            <input type="text" class="form-control" id="imageUrl" name="image[url]" required>
        </div>

        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" class="form-control" id="price" name="price" required>
        </div>

        <div class="form-group">
            <label for="docPrice">Document Price:</label>
            <input type="number" class="form-control" id="docPrice" name="Docprice" required>
        </div>


        <div class="form-group">
            <label for="days">Estimated Days:</label>
            <input type="number" class="form-control" id="days" name="Days" required>
        </div>

        <button type="submit" class="btn btn-primary">Add Country</button>
    </form>
</div>

