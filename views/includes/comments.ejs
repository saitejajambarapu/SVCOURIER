<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Comments</title>
    <style>
        /* Basic Page Styling */
        h1 {
            font-size: 36px;
            color: #333;
            margin: 30px 0;
            text-align: center;
        }

        /* Scrollable Comments Section */
        .comments-container {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: hidden;
            padding: 20px 0;
            gap: 20px;
            margin-bottom: 40px;
            -webkit-overflow-scrolling: touch;
            width: 90%;
            max-width: 1200px;
            justify-content: flex-start;
        }

        /* Individual Comment Styling */
        .comment {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
            box-sizing: border-box;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            scroll-snap-align: start;
            transition: transform 0.3s ease-in-out;
            flex-shrink: 0;
            cursor: pointer;
        }

        .comment:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        .comment h3 {
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }

        .comment p {
            color: #666;
            font-size: 14px;
        }

        .comment .rating {
            font-weight: bold;
            color: #ff9500;
        }

        .comment .location {
            font-style: italic;
            color: #888;
        }

        /* Edit Comment Form Styling */
        .edit-comment-form {
            margin-top: 20px;
            display: none;
            /* Hidden by default, will be shown when editing */
        }

        .edit-comment-form textarea {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
            resize: vertical;
        }

        .edit-comment-form button {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

        .edit-comment-form button:hover {
            background-color: #0056b3;
        }

        /* Add Comment Section Styling */
        .add-comment {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            width: 80%;
            max-width: 500px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto 40px;
            text-align: center;
        }

        .add-comment h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        .add-comment input,
        .add-comment select,
        .add-comment textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        .add-comment button {
            background-color: #007BFF;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-comment button:hover {
            background-color: #0056b3;
        }

        /* Responsive adjustments for smaller screens */
        @media (max-width: 768px) {
            .comments-container {
                width: 100%;
            }

            .comment {
                width: 270px;
            }

            .add-comment {
                width: 90%;
            }
        }
    </style>
</head>

<body>

    <h1>Customer Feedback & Comments</h1>

    <!-- Scrollable Comments Section -->
    <div class="comments-container" id="comments-container">
        <% comments.forEach(function(comment) { %>
            <div class="comment">
                <h3>
                    <%= comment.name %>
                </h3>
                <h3>Ratings</h3>
                <p class="starability-result" data-rating="<%= comment.rating %>">

                </p>
                <p><strong>From:</strong> <span class="location">
                        <%= comment.from %>
                    </span></p>
                <p><strong>To:</strong> <span class="location">
                        <%= comment.to %>
                    </span></p>
                <p class="comment-text">
                    <%= comment.comment %>
                </p>

                <!-- Check if the logged-in user is the one who posted the comment -->
                <% if (isloggedin ) { %> <!-- Assuming you have currentUserId available -->
                    <form action="/comments/<%= comment.id %>?_method=put" method="post">
                        <input id="comment" name="comment" type="text" value="<%= comment.comment %>">
                        <button class="btn btn-success" type="submit">Edit</button>
                    </form>

                    <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this comment?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    <% } %>
            </div>
            <% }); %>
    </div>

    <!-- Add Comment Section -->
    <div class="add-comment">
        <h2>Add Your Comment</h2>
        <form id="comment-form" action="/comments" method="POST">
            <input type="text" id="trackingId" name="trackingId" placeholder="Tracking ID" required>
            <textarea id="comment" name="comment" placeholder="Your Comment" rows="4" required></textarea>

            <fieldset class="starability-grow mb-3" id="rating" name="rating">
                <legend>Your Rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                    aria-label="No rating." />
                <input type="radio" id="first-rate1" name="rating" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <button type="submit">Submit Comment</button>
        </form>
    </div>

    <script>
        const commentsContainer = document.getElementById('comments-container');
    
        // For mouse wheel scrolling
        commentsContainer.addEventListener('wheel', (event) => {
            if (event.deltaY !== 0) {
                // Scroll horizontally based on vertical wheel movement
                commentsContainer.scrollLeft += event.deltaY;
    
                // Prevent default behavior to avoid vertical scroll
                event.preventDefault();
            }
        });
    
        // For touch event scrolling
        let touchStartX = 0;
        let isTouching = false;
    
        commentsContainer.addEventListener('touchstart', (event) => {
            isTouching = true;
            // Get the initial touch position
            touchStartX = event.touches[0].pageX;
    
            // Prevent default behavior to stop page scrolling
            event.preventDefault();
        });
    
        commentsContainer.addEventListener('touchmove', (event) => {
            if (!isTouching) return;
    
            // Calculate the distance moved by the touch
            const touchMoveX = event.touches[0].pageX;
            const deltaX = touchStartX - touchMoveX;
    
            // Scroll horizontally based on the touch movement
            commentsContainer.scrollLeft += deltaX;
    
            // Update the starting touch position for smooth scrolling
            touchStartX = touchMoveX;
    
            // Prevent the default scroll behavior
            event.preventDefault();
        });
    
        commentsContainer.addEventListener('touchend', () => {
            isTouching = false;
        });
    </script>
    